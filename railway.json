{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "sh -c 'gunicorn --bind 0.0.0.0:${PORT:-8080} --workers 2 --timeout 120 app:app'",
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE"
  }
}
